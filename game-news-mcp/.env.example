# 게임 뉴스 수집 MCP 서버 환경 설정

# MCP 서버 설정
MCP_SERVER_NAME=game-news-mcp
MCP_SERVER_VERSION=1.0.0

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 스크래핑 설정
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# 브라우저 설정 (로스트아크용)
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=10000

# 캐싱 설정
CACHE_ENABLED=true
CACHE_TTL=300

# 에러 핸들링
FALLBACK_ENABLED=true
ERROR_NOTIFICATION=false